# .htaccess for Hostinger/Apache deployment
RewriteEngine On
RewriteBase /

# Correct MIME types (must be before rewrite rules)
AddType application/javascript .js
AddType application/javascript .mjs
AddType text/css .css
AddType application/json .json

# Canonical host: force breccia-eg.com (redirect www and other hosts)
RewriteCond %{HTTP_HOST} !^breccia-eg\.com$ [NC]
RewriteRule ^(.*)$ https://breccia-eg.com/$1 [L,R=301]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# IMPORTANT: Serve actual files first with correct MIME types
# This prevents assets from being served as HTML when they don't exist
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

# Serve directories if they exist
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Add trailing slash for directory-like routes (skip files/root and keep query strings intact)
RewriteCond %{REQUEST_URI} !\.[^./]+$
RewriteCond %{REQUEST_URI} !/$
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{QUERY_STRING} ^$
RewriteRule ^(.+)$ /$1/ [L,R=301]

# SPA routing (Vite/React): serve index.html for non-file and non-directory requests
RewriteRule ^ /index.html [L]

# Enable GZIP compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/javascript application/json
</IfModule>

# Leverage browser caching
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/pdf "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType application/x-javascript "access plus 1 month"
  ExpiresByType application/x-shockwave-flash "access plus 1 month"
  ExpiresDefault "access plus 2 days"
</IfModule>

# Prevent directory listing
Options -Indexes

# Protect .htaccess
<Files .htaccess>
  Order allow,deny
  Deny from all
</Files>

# Security Headers
<IfModule mod_headers.c>
  # Prevent clickjacking
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Prevent MIME type sniffing
  Header set X-Content-Type-Options "nosniff"
  
  # Enable XSS protection
  Header set X-XSS-Protection "1; mode=block"
  
  # Referrer Policy
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Permissions Policy
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Custom Error Pages
ErrorDocument 404 /index.html
